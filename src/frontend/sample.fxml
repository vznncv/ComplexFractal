<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" xmlns="http://javafx.com/javafx/8"
          fx:controller="local.fractal.Controller">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <children>
        <Canvas fx:id="mainCanvas" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="labelInfo" GridPane.halignment="CENTER" text="Information label" GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
        <Button text="Button" GridPane.halignment="CENTER" GridPane.rowIndex="2" onAction="#repaintCanvas"/>
    </children>
</GridPane>
